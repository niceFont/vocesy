{
	"env": {
		"browser": true,
		"es6": true,
		"mocha": true,
		"jest": true
	},
	"extends": [
		"eslint:recommended"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": [
		"react",
		"react-hooks"
	],
	"rules": {
		"indent": [
			1,
			"tab"
		],
		"linebreak-style": [
			1,
			"unix"
		],
		"quotes": [
			1,
			"double"
		],
		"camelcase": 1,
		"semi": [
			1,
			"never"
		],
		"react/jsx-uses-react": 1,
		"react/jsx-uses-vars": 1,
		"react-hooks/rules-of-hooks": 1,
		"react-hooks/exhaustive-deps": 1,
		"react/react-in-jsx-scope": 0,
		"react/prop-types": 0,
		"function-paren-newline": [
			1,
			{
				"minItems": 5
			}
		],
		"no-mixed-spaces-and-tabs": [
			1,
			"smart-tabs"
		],
		"object-curly-newline": [
			1,
			{
				"ObjectExpression": "always",
				"ObjectPattern": {
					"multiline": true
				},
				"ImportDeclaration": "never",
				"ExportDeclaration": {
					"multiline": true,
					"minProperties": 3
				}
			}
		]
	}
}